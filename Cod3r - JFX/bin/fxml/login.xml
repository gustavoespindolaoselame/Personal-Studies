<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="fxml.LoginControlador"
	styleClass="login">

	<Label 
		text="Seja bem vindo!" 
		GridPane.columnIndex="0" 
		GridPane.rowIndex="0"
		styleClass="login-titulo">
	</Label>
	
	<Label 
		text="E-Mail:" 
		GridPane.columnIndex="0" 
		GridPane.rowIndex="1"
		styleClass="login-form-label">
	</Label>
	<TextField
		GridPane.columnIndex="1" 
		GridPane.rowIndex="1"
		fx:id="campoEmail">
	</TextField>
	
	<Label 
		text="Senha:" 
		GridPane.columnIndex="0" 
		GridPane.rowIndex="2"
		styleClass="login-form-label">
	</Label>
	<PasswordField
		GridPane.columnIndex="1" 
		GridPane.rowIndex="2"
		fx:id="campoSenha">
	</PasswordField>
	
	<Button 
		text="Entrar" 
		GridPane.columnIndex="0" 
		GridPane.rowIndex="3"
		onAction="#entrar"
		styleClass="login-form-botao">
	</Button>
	

</GridPane>